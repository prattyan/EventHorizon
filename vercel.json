{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/action/:action",
            "destination": "/api/action/[action].js"
        },
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/((?!api/|assets/|favicon.ico|manifest.json).*)",
            "destination": "/index.html"
        }
    ]
}